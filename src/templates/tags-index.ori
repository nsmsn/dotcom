(tags) => page.ori({
  title: "Tags"
  _body: `
    <h1>Tags</h1>

    <ul class="list-unstyled tagged-list-index">

    ${ Tree.map(tags, (posts,tagname) => `
      <li class="margin-bottom-small">
        <a href="/tags/${ Origami.slug(tagname) }.html" class="tagged-item">${ tagname }</a> <span class="tagged-count">(${ Tree.length(posts) })</span>
      </li>
    `) }

    </ul>
  `
})